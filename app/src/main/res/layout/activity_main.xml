<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <com.example.chivas.commui.view.SpinnerEditText
        android:id="@+id/spn_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="70dp"
        android:hint="不带搜索功能"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="#000000"
        app:image_clickable_width="30dp"
        app:right_image_height="15dp"
        app:right_image_width="20dp"
        app:right_image_icon="@mipmap/ic_comm_down"
        app:spn_max_height="150dp"
        app:spn_min_height="35dp"
        tools:ignore="RtlSymmetry" />

    <com.example.chivas.commui.view.SpinnerEditText
        android:id="@+id/spn_multi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="170dp"
        android:hint="带搜索功能"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="#000000"
        app:image_clickable_width="30dp"
        app:right_image_height="15dp"
        app:right_image_width="20dp"
        app:right_image_icon="@mipmap/ic_comm_down"
        app:spn_max_height="150dp"
        app:spn_min_height="35dp"
        tools:ignore="RtlSymmetry" />

</LinearLayout>
